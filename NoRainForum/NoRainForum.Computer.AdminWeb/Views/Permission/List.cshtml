@model ListModel<ListRolePermissionDTO>

<section class="layui-larry-box">
    <div class="larry-personal">
        <div class="layui-tab">
            <blockquote class="layui-elem-quote permission_search">
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-normal permissionAdd_btn">添加权限</a>
                </div>
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-danger batchDel">批量删除</a>
                </div>
                <div class="layui-inline">
                    <span class="layui-form-mid">共有<span style="font-weight: bold"> @Model.TotalCount </span>条数据</span>
                </div>
            </blockquote>

            <!-- 操作日志 -->
            <div class="layui-form permission_list">
                <table class="layui-table">
                    <colgroup>
                        <col width="10%">
                        <col>
                        <col>
                        <col>
                        <col>
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th>
                                <input name="" lay-skin="primary" lay-filter="allChoose" id="allChoose" type="checkbox">
                                <div class="layui-unselect layui-form-checkbox" lay-skin="primary">
                                    <i class="layui-icon"></i>
                                </div>
                            </th>
                            <th>名称</th>
                            <th>描述</th>
                            <th>时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="permission_content">
                        @foreach (var item in Model.Datas)
                        {
                            <tr>
                                <td>
                                    <input name="checked" lay-skin="primary" lay-filter="choose" type="checkbox">
                                    <div class="layui-unselect layui-form-checkbox" lay-skin="primary">
                                        <i class="layui-icon"></i>
                                    </div>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CreateTime</td>
                                <td>
                                    <a class="layui-btn layui-btn-mini permission_edit" data-id="@item.Id"><i class="iconfont icon-edit"></i> 编辑</a>
                                    <a class="layui-btn layui-btn-danger layui-btn-mini permission_del" data-id="@item.Id">
                                        <i class="layui-icon"></i> 删除
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="larry-table-page clearfix">
                    <div id="page" class="page">
                        <div class="layui-box layui-laypage layui-laypage-default">
                            @Html.Raw(ViewData["Page"])
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>
@section scripts{
    <script src="~/js/Ajax.js"></script>
    <script>
        var appConfig = {
            name: "permission",    //需要和页面名称对应
            title: "权限",    //显示的名称
            addUrl: "/permission/Add",   //添加弹框的路径
            editUrl: "/permission/Edit",      //修改弹框的路径
            delUrl:"/permission/delete",
            //批量删除Ajax
            batchDel: function (data) {     //Array data 得到的是 需要删除的id
                data.each(function (index, value) {
                    console.log(value);
                    

                });

            }
        };

    </script>
}
